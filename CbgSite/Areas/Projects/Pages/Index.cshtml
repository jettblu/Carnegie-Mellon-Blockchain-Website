@page
@model CbgSite.Areas.Projects.Pages.IndexModel
@{
    ViewData["Title"] = "Project Page";
}

<div class="col s12 l10 offset-l1">
    <div class="row">
        <div class="center">
            <img src="@Model.Project.ThumbnailPath" class="logoMed">
        </div>
        <div class="projectContent">
            <h4>@Model.Project.Name</h4>
            <center>
                <div class="row">
                    <div class="col s12 l12">
                        @if (!String.IsNullOrEmpty(Model.Project.LinkTwitter))
                        {
                            <div class="socialIcon">
                                <a href="@Model.Project.LinkTwitter"><img src="~/media/social/logoTwitterBlue.svg" style="max-width: 34px;" /></a>
                            </div>
                        }
                        @if (!String.IsNullOrEmpty(Model.Project.LinkGithub))
                        {
                            <div class="socialIcon">
                                <a href="@Model.Project.LinkGithub"><img src="~/media/social/logoGithub64Light.png" style="max-width: 34px;" /></a>
                            </div>
                        }
                    </div>
                    </div>
            </center>
            <h5 style="color: @Model.Project.Color">Summary</h5>
            <p style="white-space: pre-line; font-size: 17px;">@Model.Project.Description</p>
            @if (!String.IsNullOrEmpty(Model.Project.DescriptionLong))
            {
                <h5 style="color: @Model.Project.Color">Description</h5>
                <p style="white-space: pre-line; font-size: 17px;">@Model.Project.DescriptionLong</p>
            }
        </div>
    </div>
</div>
