@using Microsoft.AspNetCore.Identity
@using Areas.Identity.Data
@inject SignInManager<CbgUser> SignInManager
@inject UserManager<CbgUser> UserManager



<nav class="z-depth-0">
    <div class="nav-wrapper black lighten-5">
        <a class="brand-logo left-align hide-on-med-and-down" style="margin-left: 5%; margin-top: 1.3%" href="/"><img src="~/media/cbgLogo.png" class="logoSmall" alt="CBG Logo"></a>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="white-text material-icons">menu</i></a>
        <ul id="nav-mobile" class="right z-depth-0 hide-on-med-and-down">
            <li><a class="navLinks" asp-area="Projects" asp-page="All">Projects</a></li>
            @if (SignInManager.IsSignedIn(User))
            {
                <li>
                    <a class="navLinks" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                </li>
            }
            else
            {
                <li>
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
            }
        </ul>
    </div>
</nav>
<ul class="right side-nav lighten-5" id="mobile-demo">
    <br>
    <div class="center-align "><a href="/"><img src="~/media/cbgLogo.png" alt="CBG Logo" class="logoSmall"></a></div>

    <li><a class="navLinks" asp-area="Projects" asp-page="All">Projects</a></li>
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a class="navLinks" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
        </li>
    }
    else
    {
        <li>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }

</ul>
